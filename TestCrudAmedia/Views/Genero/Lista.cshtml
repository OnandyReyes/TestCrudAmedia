@model TestCrudAmedia.ViewModels.GeneroViewModels
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<a class="btn btn-primary" asp-area="" asp-controller="Genero" asp-action="Nuevo">Nuevo Genero</a>

<table class="table table-striped table-hover tablasLista">
    <thead>
        <tr>
            <th>#</th>
            <th>Descripción</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model.listGeneros)
            {

                <tr>
                    <td>@item.CodGenero</td>
                    <td>@item.TxtDesc</td>
                </tr>

            }
        }
    </tbody>
</table>