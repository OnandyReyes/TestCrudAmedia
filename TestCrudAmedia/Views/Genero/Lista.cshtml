@model TestCrudAmedia.ViewModels.GeneroViewModels
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-striped table-hover tablasLista">
    <thead>
        <tr>
            <th>#</th>
            <th>Descripción</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model.listGeneros)
            {

                <tr>
                    <td>@item.CodGenero</td>
                    <td>@item.TxtDesc</td>
                </tr>

            }
        }
    </tbody>
</table>