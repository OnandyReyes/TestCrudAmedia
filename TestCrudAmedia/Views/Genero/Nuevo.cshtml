@model TestCrudAmedia.ViewModels.GeneroViewModels
@{
    ViewData["Title"] = "Nuevo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-5">
    <div class="col-sm-4 offset-sm-4">
        <form asp-controller="Genero" asp-action="Nuevo" method="post">
            <legend>Datos Nuevo Genero</legend>
            <div class="mb-3">
                <label for="InputUser" class="form-label">Descripción</label>
                <input type="text" maxlength="500" class="form-control" asp-for="descripcion">
            </div>
            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Mensaje
                </div>
            }


            <button type="submit" class="btn btn-primary">Agregar</button>
        </form>
    </div>
</div>

