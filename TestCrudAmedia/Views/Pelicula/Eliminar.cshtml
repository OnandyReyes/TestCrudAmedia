@model TestCrudAmedia.ViewModels.PeliculaViewModels
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-5">
    <div class="col-sm-4 offset-sm-4">
        <form asp-controller="pelicula" asp-action="Eliminar" method="post">
            <input type="hidden" asp-for="cod_pelicula" value="@Model.cod_pelicula">

            <legend>Seguro que Desea Borrar la Pelicula?</legend>
            

            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @ViewBag.Mensaje
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }


            <button type="submit" class="btn btn-danger">Si! Eliminar</button>
            <a class="btn btn-default" asp-area="" asp-controller="Pelicula" asp-action="Lista">Volver</a>
        </form>
    </div>
</div>

