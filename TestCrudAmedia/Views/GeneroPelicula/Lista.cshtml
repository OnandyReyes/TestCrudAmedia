@model TestCrudAmedia.ViewModels.GeneroPeliculaViewModels
@{
    ViewData["Title"] = "Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h3>@Model.pelicula.TxtDesc</h3>
<hr />
<a class="btn btn-primary" asp-area="" asp-controller="GeneroPelicula" asp-action="Nuevo">Asignar Genero</a>
<a class="btn btn-default" asp-area="" asp-controller="Pelicula" asp-action="Lista">Volver</a>
<table class="table table-striped table-hover tablasLista">
    <thead>
        <tr>
            <th>#</th>
            <th>Descripción</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model.listGeneros)
            {

                <tr>
                    <td>@item.CodGenero</td>
                    <td>@item.TxtDesc</td>
                </tr>

            }
        }
    </tbody>
</table>

