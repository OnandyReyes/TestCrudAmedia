@model TestCrudAmedia.ViewModels.UsuariosViewModels
@{
    ViewData["Title"] = "Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<a class="btn btn-primary" asp-area="" asp-controller="Usuarios" asp-action="Nuevo">Nuevo Usuario</a>

<table class="table table-striped table-hover tablasLista">
    <thead>
        <tr>
            <th>#</th>
            <th>User</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>No Doc</th>
            <th>Rol</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach(var item in Model.listUsers){

                <tr>
                    <td>@item.CodUsuario</td>
                    <td>@item.TxtUser</td>
                    <td>@item.TxtNombre</td>
                    <td>@item.TxtApellido</td>
                    <td>@item.NroDoc</td>
                    <td>@Model.getRolDescById(item.CodRol.Value)</td>
                    <td>@Model.getEstado(item.SnActivo.Value)</td>
                    <td>
                        <a class="btn btn-warning" asp-area="" asp-controller="Usuarios" asp-action="Editar" asp-route-id="@item.CodUsuario">Editar</a> |
                        <a class="btn btn-danger" asp-area="" asp-controller="Usuarios" asp-action="Eliminar" asp-route-id="@item.CodUsuario">Eliminar</a>
                    </td>
                </tr>

            }
        }
    </tbody>
</table>


